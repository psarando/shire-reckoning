{
  "name": "shire-reckoning",
  "version": "5.0.0-alpha",
  "homepage": "https://psarando.github.io/shire-reckoning",
  "source": "src/lib.js",
  "main": "lib/TolkienCalendars.js",
  "targets": {
    "main": {
      "isLibrary": true
    }
  },
  "keywords": [
    "calendar",
    "date",
    "Tolkien",
    "Shire",
    "Rivendell",
    "Imladris",
    "Gondor",
    "Numenor",
    "lord-of-the-rings",
    "middle-earth"
  ],
  "license": "EPL-1.0",
  "dependencies": {
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@storybook/source-loader": "^5.2.8",
    "@storybook/theming": "^5.2.8",
    "@swc/helpers": "^0.4.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@btmills/prettier": "^1.17.0",
    "babel-preset-react-app": "^9.1.2",
    "jest": "^24.9.0",
    "parcel": "2.6.2"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "scripts": {
    "start": "npm run storybook",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "PUBLIC_URL='./' build-storybook --static-dir public/examples --output-dir build/examples",
    "build": "cp public/lib.html lib/index.html && parcel build",
    "test": "jest --watch",
    "prettier": "prettier --write 'src/**/*.js'"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "moduleDirectories": [
        "node_modules",
        "src"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/src/__mocks__/styleMock.js"
    }
},
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
